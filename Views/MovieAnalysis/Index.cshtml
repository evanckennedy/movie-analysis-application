@model List<movie_analysis_application.Models.Movie>

@{
    ViewBag.Title = "Movie List";
}

<h2>@ViewBag.Title</h2>

@Html.ActionLink("Filter by Category", "InputCategory", "MovieAnalysis", null, new { @class = "btn btn-primary" })

@Html.ActionLink("Filter by Budget", "InputBudget", "MovieAnalysis", null, new { @class = "btn btn-success" })

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Budget</th>
            <th>Release Year</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Budget</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Category</td>
            </tr>
        }
    </tbody>
</table>