@{
    ViewBag.Title = "Enter Movie ID";
}

<h2>Enter Movie ID</h2>

@using (Html.BeginForm("CalculateOverallRating", "MovieAnalysis", FormMethod.Get))
{
    <label for="movieId">Movie ID:</label>
    @Html.TextBox("movieId", null, new { type = "number", min = "1", max = "10", required = "required" })
    <button type="submit">Confirm</button>
}